<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/normal_font_color"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/address_edit"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_edit" />

    <TextView
        android:id="@+id/address_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/normal_font_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/address_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_name"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/address_edit"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/normal_hint_color"
        android:textSize="15sp" />

</RelativeLayout>