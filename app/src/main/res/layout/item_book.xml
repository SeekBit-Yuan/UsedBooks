<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/def_item" />

    <TextView
        android:id="@+id/book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/book_image"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/book_image"
        android:maxLines="2"
        android:textColor="@color/normal_font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/book_image"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/book_image"
        android:textColor="@color/bg_btn"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/book_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/normal_hint_color"
        android:textSize="15sp" />

</RelativeLayout>