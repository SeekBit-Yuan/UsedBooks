<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar_message" />

    <RelativeLayout
        android:id="@+id/message_1"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:padding="6dp">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerVertical="true"
            android:background="@color/text_color_blue"
            android:src="@mipmap/ic_tongzhi" />

        <TextView
            android:id="@+id/book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_image"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/book_image"
            android:maxLines="2"
            android:text="消息"
            android:textColor="@color/normal_font_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/book_image"
            android:layout_marginLeft="16dp"
            android:text="你有新的好友信息"
            android:layout_toRightOf="@+id/book_image"
            android:textColor="@color/normal_font_color"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_2"
        android:layout_below="@id/message_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:padding="6dp">

        <ImageView
            android:id="@+id/book_image_2"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerVertical="true"
            android:background="@color/voucher_color_red"
            android:src="@mipmap/ic_xiaoxi" />

        <TextView
            android:id="@+id/book_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_image_2"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/book_image_2"
            android:maxLines="2"
            android:text="对话"
            android:textColor="@color/normal_font_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/book_price_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/book_image_2"
            android:layout_marginLeft="16dp"
            android:text="好友聊天信息"
            android:layout_toRightOf="@+id/book_image_2"
            android:textColor="@color/normal_font_color"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_3"
        android:layout_below="@id/message_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:padding="6dp">

        <ImageView
            android:id="@+id/book_image_3"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_centerVertical="true"
            android:background="@color/voucher_color_yellow"
            android:src="@mipmap/ic_duihua" />

        <TextView
            android:id="@+id/book_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/book_image_3"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/book_image_3"
            android:maxLines="2"
            android:text="通知"
            android:textColor="@color/normal_font_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/book_price_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/book_image_3"
            android:layout_marginLeft="16dp"
            android:text="订单已成功"
            android:layout_toRightOf="@+id/book_image_3"
            android:textColor="@color/normal_font_color"
            android:textSize="10sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/message_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="36dp"
            android:text="消息列表"/>
    </LinearLayout>


</RelativeLayout>

